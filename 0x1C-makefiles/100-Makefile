CC= gcc
SRC= main.c school.c
OBJ= $(SRC:.c=.o)
NAME= school
RM= /bin/rm
CFLAGS := -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $@

clean:
    $(RM) -f $(NAME) $(OBJ)

oclean:
    $(RM) -f $(OBJ)

fclean: clean oclean

re: fclean all

%.o: %.c
    $(CC) $(CFLAGS) -c $< -o $@

$(OBJ): $(SRC)
